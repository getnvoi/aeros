<textarea
  id="<%= id %>"
  name="<%= name %>"
  placeholder="<%= placeholder %>"
  rows="<%= rows %>"
  class="<%= Aeno::FormBuilder::BaseComponent::INPUT_BASE_CLASSES.join(' ') %> resize-y"
  <%= 'disabled' if disabled %>
  <%= 'required' if required %>
  <% if data.any? %>
    <% data.each do |key, val| %>
      data-<%= key.to_s.dasherize %>="<%= val %>"
    <% end %>
  <% end %>
><%= value %></textarea>
