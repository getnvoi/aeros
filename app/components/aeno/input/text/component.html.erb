<input
  type="<%= type || 'text' %>"
  id="<%= id %>"
  name="<%= name %>"
  value="<%= value %>"
  placeholder="<%= placeholder %>"
  autocomplete="<%= autocomplete %>"
  class="<%= Aeno::FormBuilder::BaseComponent::INPUT_BASE_CLASSES.join(' ') %>"
  <%= 'disabled' if disabled %>
  <%= 'required' if required %>
  <% if data.any? %>
    <% data.each do |key, val| %>
      data-<%= key.to_s.dasherize %>="<%= val %>"
    <% end %>
  <% end %>
/>