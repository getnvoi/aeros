<div class="<%= 'opacity-50 pointer-events-none' if disabled %>">
  <div class="flex items-center gap-3">
    <input
      type="color"
      id="<%= input_id %>"
      name="<%= name %>"
      value="<%= value %>"
      class="<%= classes %>"
      <%= 'disabled' if disabled %>
      <% data.each do |key, val| %>
        data-<%= key.to_s.dasherize %>="<%= val %>"
      <% end %>
    />
    <% if label %>
      <label for="<%= input_id %>" class="text-sm text-foreground">
        <%= label %>
      </label>
    <% end %>
  </div>

  <% if helper_text %>
    <p class="mt-1 text-sm text-muted-foreground"><%= helper_text %></p>
  <% end %>
</div>
